---
import SidebarLayout from "@/components/SidebarLayout";
import { Menu, Moon} from "lucide-react";
import { Button } from "@/components/ui/button"
import { ModeToggle } from "../components/ModeToggle"
import '../styles/global.css';

const map: Record<string, string> = {
  "/": "Home",
  "/scanner": "Scanner",
  "/comparison": "Comparison",
};

const pathname = Astro.url.pathname;
const title =
  map[pathname] ||
  pathname.replace("/", "").charAt(0).toUpperCase() + pathname.slice(2);
---


<script is:inline>
	const getThemePreference = () => {
		if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
			return localStorage.getItem('theme');
		}
		return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
	};
	const isDark = getThemePreference() === 'dark';
	document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
 
	if (typeof localStorage !== 'undefined') {
		const observer = new MutationObserver(() => {
			const isDark = document.documentElement.classList.contains('dark');
			localStorage.setItem('theme', isDark ? 'dark' : 'light');
		});
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	}
</script>


<!doctype html>
<html lang="de">
  <head>
    <meta name="color-scheme" content="light dark" />
    <title>HackathonXAI2025</title>
  </head>

  <body class="min-h-screen antialiased bg-background text-foreground">
    <SidebarLayout client:only="react">
      <div class="flex flex-col w-full">
        <!-- Header mit Seitentitel -->
        <header class="sticky top-0 z-40 w-full backdrop-blur py-3 mb-4 pointer-events-none border-b bg-background/80">
          <div class="flex items-center justify-between gap-2 pointer-events-auto">
            <h1 class="text-2xl font-semibold">{title}</h1>
            <ModeToggle client:only="react" />
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1">
          <slot />
        </main>
      </div>
    </SidebarLayout>
  </body>
</html>