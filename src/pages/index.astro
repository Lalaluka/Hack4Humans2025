---
import Layout from '../layouts/Layout.astro';
---

<Layout>


  <!-- Background illustration -->
  <div class="pointer-events-none absolute inset-0 -z-10 flex items-start justify-center pt-15">
    <svg viewBox="0 0 400 700" class="w-[28vw] max-w-[420px] min-w-[260px] h-[50vw] max-h-[800px] min-h-[400px] opacity-15 rotate-[-12deg]">
      <rect x="60" y="60" width="280" height="580" rx="8" fill="#222" stroke="#555" stroke-width="14" />
      <rect x="90" y="110" width="220" height="480" rx="4" fill="#fff" />
      <rect x="190" y="320" width="20" height="80" fill="#4B8B3B" />
      <rect x="160" y="260" width="80" height="60" fill="#3ECF4C" />
      <rect x="175" y="240" width="50" height="30" fill="#2E7D32" />
    </svg>
  </div>

  <main class="container relative mx-auto px-4 pt-20">
    <div class="mx-auto mt-16 w-full max-w-xl">
      <div class="rounded-xl border bg-card text-card-foreground shadow">
        <div class="p-6">
          <h2 class="text-2xl font-semibold tracking-tight">Welcome to EcoScan</h2>
          <p class="mt-2 text-sm text-muted-foreground">Scan or enter an EAN to discover the environmental and social impact of your electronic product.</p>
          <div class="mt-6 flex gap-2">
            <input type="text" placeholder="Enter EAN..." class="flex-1 h-10 rounded-md border bg-background px-3 py-2 text-sm shadow-sm outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" />
            <button class="h-10 rounded-md bg-primary px-4 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90">Scan EAN</button>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
